{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true, //.js files ok
    "target": "es6",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "jsx": "react",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*",
  ]
}